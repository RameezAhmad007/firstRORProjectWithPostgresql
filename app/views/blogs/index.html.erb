<h1>Blogs</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title%></td>
        <td><%= blog.description%></td>
        <td>
          <%= link_to 'Show', blog_path(blog) %>
        </td>
        <td>
          <%= link_to 'Edit', edit_blog_path(blog) %>
        </td>
        <td>
          <%= link_to 'Delete', blog_path(blog), data: { "turbo-method": :delete, turbo_confirm: 'Are you sure you want to delete this blog?' } %>
        </td>
      </tr>
    <%end %>
  </tbody>
</table>
<%= link_to  'New Blog', new_blog_path %>
